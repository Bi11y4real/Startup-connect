<%- include('../partials/header') %>

<!-- Messages -->
<% if (locals.query) { %>
    <% if (query.success) { %>
        <div class="bg-green-50 border-l-4 border-green-400 p-4 mb-6">
            <div class="flex">
                <div class="flex-shrink-0">
                    <svg class="h-5 w-5 text-green-400" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                    </svg>
                </div>
                <div class="ml-3">
                    <p class="text-sm text-green-700"><%= decodeURIComponent(query.message) %></p>
                </div>
            </div>
        </div>
    <% } %>
    <% if (query.error) { %>
        <div class="bg-red-50 border-l-4 border-red-400 p-4 mb-6">
            <div class="flex">
                <div class="flex-shrink-0">
                    <svg class="h-5 w-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                    </svg>
                </div>
                <div class="ml-3">
                    <p class="text-sm text-red-700"><%= decodeURIComponent(query.message) %></p>
                </div>
            </div>
        </div>
    <% } %>
<% } %>

<main class="flex-grow py-6">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Project Header -->
        <div class="mb-8">
            <div class="md:flex md:items-center md:justify-between">
                <div class="flex-1 min-w-0">
                    <h1 class="text-2xl font-bold text-gray-900 truncate">
                        <%= project.title %>
                    </h1>
                    <div class="mt-1 flex flex-col sm:flex-row sm:flex-wrap sm:mt-0 sm:space-x-6">
                        <div class="mt-2 flex items-center text-sm text-gray-500">
                            <svg class="flex-shrink-0 mr-1.5 h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                            </svg>
                            <%= project.industry %>
                        </div>
                        <div class="mt-2 flex items-center text-sm text-gray-500">
                            <svg class="flex-shrink-0 mr-1.5 h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                            </svg>
                            <%= project.location || 'Location not specified' %>
                        </div>
                        <div class="mt-2 flex items-center text-sm text-gray-500">
                            <svg class="flex-shrink-0 mr-1.5 h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                            </svg>
                            Created <%= new Date(project.createdAt).toLocaleDateString() %>
                        </div>
                        <div class="mt-2 flex items-center">
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                                <%= project.status === 'active' ? 'bg-green-100 text-green-800' : 
                                    project.status === 'completed' ? 'bg-blue-100 text-blue-800' : 
                                    'bg-gray-100 text-gray-800' %>">
                                <%= project.status.charAt(0).toUpperCase() + project.status.slice(1) %>
                            </span>
                        </div>
                    </div>
                </div>
                <% if (isOwner) { %>
                    <div class="mt-4 flex md:mt-0 md:ml-4">
                        <a href="/projects/<%= project.id %>/edit" class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary">
                            Edit Project
                        </a>
                        <form action="/projects/<%= project.id %>/delete" method="POST" class="ml-3 inline-block">
                            <button type="submit" class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" onclick="return confirm('Are you sure you want to delete this project?')">
                                Delete Project
                            </button>
                        </form>
                    </div>
                <% } else if (!isOwner) { %>
                    <div class="mt-4 flex md:mt-0 md:ml-4">
                        <% if (locals.user && locals.user.role === 'collaborator' && !project.collaborators?.some(c => c.userId === user.id)) { %>
                            <a href="#collaborate-section" class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary">
                                Collaborate
                            </a>
                        <% } %>
                    </div>
                <% } %>
            </div>
        </div>

        <div class="grid grid-cols-1 gap-6 lg:grid-cols-3">
            <!-- Main Content -->
            <div class="lg:col-span-2">
                <!-- Project Image -->
                <% if (project.imageUrl) { %>
                    <div class="bg-white shadow rounded-lg overflow-hidden mb-6">
                        <img src="<%= project.imageUrl %>" alt="<%= project.title %>" class="w-full h-96 object-cover">
                    </div>
                <% } %>

                <!-- Project Description -->
                <div class="bg-white shadow rounded-lg p-6 mb-6">
                    <h2 class="text-lg font-medium text-gray-900 mb-4">About the Project</h2>
                    <div class="prose max-w-none">
                        <%= project.description %>
                    </div>
                </div>

                <!-- Project Pitch -->
                <% if (project.pitch) { %>
                    <div class="bg-white shadow rounded-lg p-6 mb-6">
                        <h2 class="text-lg font-medium text-gray-900 mb-4">Project Pitch</h2>
                        <div class="prose max-w-none">
                            <%= project.pitch %>
                        </div>
                    </div>
                <% } %>

                <!-- Timeline -->
                <% if (project.timeline) { %>
                    <div class="bg-white shadow rounded-lg p-6">
                        <h2 class="text-lg font-medium text-gray-900 mb-4">Project Timeline</h2>
                        <div class="prose max-w-none">
                            <%= project.timeline %>
                        </div>
                    </div>
                <% } %>
            </div>

            <!-- Sidebar -->
            <div class="space-y-6">
                <!-- Collaboration Section for non-owners -->
                <% if (!isOwner && locals.user && locals.user.role === 'collaborator' && !project.collaborators?.some(c => c.userId === user.id)) { %>
                    <div id="collaborate-section" class="bg-white shadow rounded-lg p-6">
                        <h2 class="text-lg font-medium text-gray-900 mb-4">Join This Project</h2>
                        
                        <% if (locals.collaborationRequest) { %>
                            <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
                                <p class="text-blue-700">
                                    <span class="font-medium">Request Pending:</span> 
                                    Your collaboration request is being reviewed by the project founder.
                                </p>
                            </div>
                        <% } else { %>
                            <form action="/projects/<%= project.id %>/collaborate" method="POST" class="space-y-4">
                                <div>
                                    <label for="role" class="block text-sm font-medium text-gray-700">
                                        What role would you like to take?
                                    </label>
                                    <select id="role" name="role" required
                                            class="mt-1 block w-full pl-3 pr-10 py-2 text-base border-gray-300 focus:outline-none focus:ring-primary focus:border-primary rounded-md">
                                        <option value="">Select a role</option>
                                        <option value="developer">Developer</option>
                                        <option value="designer">Designer</option>
                                        <option value="marketing">Marketing</option>
                                        <option value="business">Business Development</option>
                                        <option value="other">Other</option>
                                    </select>
                                </div>

                                <div>
                                    <label for="message" class="block text-sm font-medium text-gray-700">
                                        Why would you like to collaborate?
                                    </label>
                                    <textarea id="message" name="message" rows="4" required
                                              class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-primary focus:border-primary"
                                              placeholder="Describe your interest in the project and what you can bring to the team..."></textarea>
                                </div>

                                <button type="submit" 
                                        class="w-full inline-flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-primary hover:bg-primary-dark focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary">
                                    Send Collaboration Request
                                </button>
                            </form>
                        <% } %>
                    </div>
                <% } %>

                <!-- Collaboration Requests (if owner) -->
                <% if (isOwner) { %>
                    <div class="bg-white shadow rounded-lg p-6">
                        <h2 class="text-lg font-medium text-gray-900 mb-4">Collaboration Requests</h2>
                        <a href="/projects/<%= project.id %>/manage-collaborations" class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary">
                            Manage Requests
                        </a>
                    </div>
                <% } %>

                <!-- Current Collaborators -->
                <% if (project.collaborators && project.collaborators.length > 0) { %>
                    <div class="bg-white shadow rounded-lg p-6">
                        <h2 class="text-lg font-medium text-gray-900 mb-4">Current Collaborators</h2>
                        <div class="space-y-4">
                            <% project.collaborators.forEach(collaborator => { %>
                                <div class="flex items-center space-x-4">
                                    <div class="flex-shrink-0">
                                        <img class="h-10 w-10 rounded-full" src="<%= collaborator.photoURL || '/images/default-avatar.png' %>" alt="<%= collaborator.name %>">
                                    </div>
                                    <div>
                                        <p class="text-sm font-medium text-gray-900"><%= collaborator.name %></p>
                                        <p class="text-sm text-gray-500"><%= collaborator.role %></p>
                                    </div>
                                </div>
                            <% }); %>
                        </div>
                    </div>
                <% } %>
                <!-- Funding Progress -->
                <div class="bg-white shadow rounded-lg p-6">
                    <h2 class="text-lg font-medium text-gray-900 mb-4">Funding Progress</h2>
                    <div class="mt-2">
                        <div class="flex justify-between mb-1">
                            <span class="text-2xl font-bold text-gray-900">Kshs<%= project.fundingRaised.toLocaleString() %></span>
                            <span class="text-sm text-gray-500">of Kshs<%= project.fundingGoal.toLocaleString() %></span>
                        </div>
                        <div class="relative pt-1">
                            <div class="overflow-hidden h-2 text-xs flex rounded bg-gray-100">
                                <div style="width: <%= (project.fundingRaised / project.fundingGoal * 100).toFixed(0) %>%" 
                                     class="shadow-none flex flex-col text-center whitespace-nowrap text-white justify-center bg-primary">
                                </div>
                            </div>
                        </div>
                        <div class="mt-2 text-sm text-gray-500">
                            <%= project.investors.length %> investor<%= project.investors.length === 1 ? '' : 's' %>
                        </div>
                    </div>

                    <% if (locals.user && locals.user.role === 'investor' && project.status === 'active') { %>
                        <div class="mt-6">
                            <form action="/projects/<%= project.id %>/invest" method="POST" class="space-y-4">
                                <div>
                                    <label for="amount" class="block text-sm font-medium text-gray-700">Investment Amount ($)</label>
                                    <div class="mt-1">
                                        <input type="number" name="amount" id="amount" min="1" step="1" required
                                               class="shadow-sm focus:ring-primary focus:border-primary block w-full sm:text-sm border-gray-300 rounded-md">
                                    </div>
                                </div>
                                <button type="submit" class="w-full inline-flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-primary hover:bg-primary-dark focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary">
                                    Invest Now
                                </button>
                            </form>
                        </div>
                    <% } %>
                    <% if (isOwner && collaborationRequests && collaborationRequests.length > 0) { %>
                        <div class="mt-6">
                            <h3 class="text-lg font-medium text-gray-900 mb-4">Collaboration Requests</h3>
                            <div class="bg-white shadow overflow-hidden sm:rounded-md">
                                <ul class="divide-y divide-gray-200">
                                    <% collaborationRequests.forEach(request => { %>
                                        <li class="hover:bg-gray-50">
                                            <div class="px-4 py-4 sm:px-6">
                                                <div class="flex items-center justify-between">
                                                    <div class="flex items-center">
                                                        <div class="ml-4">
                                                            <div class="text-sm font-medium text-gray-900">
                                                                <%= request.collaboratorName %>
                                                            </div>
                                                            <div class="text-sm text-gray-500">
                                                                <%= request.role %>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="ml-6 flex items-center space-x-4">
                                                        <% if (request.status === 'pending') { %>
                                                            <button onclick="handleRequest('<%= request.id %>', 'accept')" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-primary hover:bg-primary-dark focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary">
                                                                Accept
                                                            </button>
                                                            <button onclick="handleRequest('<%= request.id %>', 'reject')" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500">
                                                                Reject
                                                            </button>
                                                        <% } else { %>
                                                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= request.status === 'accepted' ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
                                                                <%= request.status.charAt(0).toUpperCase() + request.status.slice(1) %>
                                                            </span>
                                                        <% } %>
                                                    </div>
                                                </div>
                                                <div class="mt-2">
                                                    <p class="text-sm text-gray-500">
                                                        <%= request.message %>
                                                    </p>
                                                </div>
                                            </div>
                                        </li>
                                    <% }); %>
                                </ul>
                                <script>
                                    // Handle collaboration request actions
                                    async function handleRequest(requestId, action) {
                                        try {
                                            const projectId = '<%= project.id %>';
                                            const response = await fetch(`/collaborations/request/${requestId}/${action}`, {
                                                method: 'PUT',
                                                headers: {
                                                    'Content-Type': 'application/json',
                                                },
                                                body: JSON.stringify({ projectId })
                                            });

                                            if (!response.ok) {
                                                throw new Error('Failed to update request status');
                                            }

                                            // Refresh the page to show updated status
                                            location.reload();
                                        } catch (error) {
                                            console.error('Error handling request:', error);
                                            alert('Failed to update request status. Please try again.');
                                        }
                                    }
                                </script>
                            </div>
                        </div>
                    <% } %>
                    </div>
                </div>

                <!-- Project Links -->
                <% if (project.website) { %>
                    <div class="bg-white shadow rounded-lg p-6">
                        <h2 class="text-lg font-medium text-gray-900 mb-4">Links</h2>
                        <div class="space-y-2">
                            <a href="<%= project.website %>" target="_blank" rel="noopener noreferrer" class="flex items-center text-primary hover:text-primary-dark">
                                <svg class="h-5 w-5 mr-2" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9" />
                                </svg>
                                Website
                            </a>
                        </div>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</main>

<%- include('../partials/footer') %> 