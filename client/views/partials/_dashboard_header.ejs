<header class="bg-white shadow-sm z-10">
    <div class="container mx-auto px-6 py-4 flex justify-between items-center">
        <a href="/" class="text-2xl font-bold text-primary">StartupConnect</a>
        <div class="flex items-center space-x-4">
            <a href="/projects" class="text-gray-600 hover:text-primary">Projects</a>
            <a href="/dashboard" class="text-gray-600 hover:text-primary">Dashboard</a>
             <% if (user) { %>
                <div class="relative">
                    <button id="user-menu-button" class="flex items-center focus:outline-none">
                        <span class="text-gray-800"><%= user.name %></span>
                        <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path></svg>
                    </button>
                    <div id="user-menu" class="absolute right-0 mt-2 w-48 bg-white rounded-md shadow-lg py-1 z-20 hidden">
                        <a href="/dashboard/profile" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Profile</a>
                        <a href="/auth/logout" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Logout</a>
                    </div>
                </div>
            <% } %>
        </div>
    </div>
</header>
