            </a>

            <!-- Desktop Navigation -->
            <div class="hidden md:flex items-center space-x-4">
                <a href="/projects" class="text-gray-700 hover:text-primary-dark px-3 py-2 rounded-md text-sm font-medium">Projects</a>
                
                <% if (locals.user) { %>
                    <a href="/dashboard" class="text-gray-700 hover:text-primary-dark px-3 py-2 rounded-md text-sm font-medium">Dashboard</a>
                    <div class="relative ml-3">
