<div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 flex items-start space-x-6">
    <!-- Left Column: Image -->
    <div class="flex-shrink-0">
        <img class="h-24 w-24 rounded-xl object-cover" src="<%= project.imageUrl || 'https://images.unsplash.com/photo-1556761175-5973dc0f32e7?q=80&w=2832&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D' %>" alt="<%= project.title %> logo">
    </div>

    <!-- Right Column: Details -->
    <div class="flex-grow flex flex-col h-full">
        <!-- Card Header -->
        <div class="flex justify-between items-start">
            <div>
                <h3 class="text-xl font-bold text-gray-900"><%= project.title %></h3>
                <p class="text-sm text-gray-600 mt-1"><%= project.description %></p>
                <!-- Status Badge -->
                <% 
                    let statusClasses = '';
                    if (project.status === 'active') {
                        statusClasses = 'bg-green-100 text-green-800';
                    } else {
                        statusClasses = 'bg-gray-100 text-gray-800';
                    }
                %>
                <span class="mt-3 inline-block px-2.5 py-1 text-xs font-bold <%= statusClasses %> rounded-full capitalize"><%= project.status %></span>
            </div>
            <!-- Edit/Share Icons -->
            <div class="flex items-center space-x-3">
                <a href="/dashboard/projects/<%= project.id %>/edit" class="text-gray-400 hover:text-primary">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.5L14.732 3.732z"></path></svg>
                </a>
                <button class="text-gray-400 hover:text-primary">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12s-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.367 2.684 3 3 0 00-5.367-2.684z"></path></svg>
                </button>
            </div>
        </div>

        <!-- Spacer -->
        <div class="flex-grow"></div>

        <!-- Funding Progress -->
        <div class="mt-4">
            <div class="flex justify-between items-center mb-1">
                <span class="text-sm font-medium text-gray-700">Funding Progress</span>
                <span class="text-sm font-bold text-gray-900">Ksh<%= (project.fundingRaised || 0).toLocaleString() %> / Ksh<%= (project.fundingGoal || 0).toLocaleString() %></span>
            </div>
            <% const fundingPercentage = project.fundingGoal > 0 ? (project.fundingRaised / project.fundingGoal) * 100 : 0; %>
            <div class="w-full bg-gray-200 rounded-full h-2">
                <div class="bg-purple-600 h-2 rounded-full" style="width: <%= `${fundingPercentage}%` %>"></div>
            </div>
        </div>
        
        <!-- Actions -->
        <div class="grid grid-cols-2 gap-4 mt-4">
            <a href="/projects/<%= project.id %>" class="w-full text-center px-4 py-2.5 border border-gray-300 rounded-lg text-sm font-semibold text-gray-800 hover:bg-gray-50">View Details</a>
            <a href="/dashboard/projects/<%= project.id %>/edit" class="w-full text-center px-4 py-2.5 bg-primary text-white rounded-lg text-sm font-semibold hover:bg-primary-dark transition-colors">Manage</a>
        </div>
    </div>
</div>