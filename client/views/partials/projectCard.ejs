<div class="bg-white rounded-lg shadow-sm hover:shadow-md transition-shadow duration-300 overflow-hidden">
    <% if (project.imageUrl) { %>
        <img src="<%= project.imageUrl %>" alt="<%= project.title %>" class="w-full h-48 object-cover">
    <% } else { %>
        <div class="w-full h-48 bg-gray-100 flex items-center justify-center">
            <span class="text-4xl text-gray-400">ðŸš€</span>
        </div>
    <% } %>
    
    <div class="p-6">
        <div class="flex items-start justify-between">
            <h3 class="text-lg font-semibold text-gray-900 mb-2">
                <%= project.title %>
            </h3>
            <span class="px-2 py-1 text-xs font-medium bg-primary-light/10 text-primary-dark rounded-full">
                <%= project.industry %>
            </span>
        </div>

        <p class="text-gray-600 text-sm mb-4 line-clamp-2">
            <%= project.description %>
        </p>

        <div class="flex items-center justify-between">
            <div class="flex items-center space-x-2">
                <img src="<%= project.founderAvatar || 'https://ui-avatars.com/api/?name=' + encodeURIComponent(project.founderName) %>" 
                     alt="<%= project.founderName %>" 
                     class="w-6 h-6 rounded-full">
                <span class="text-sm text-gray-500">
                    <%= project.founderName %>
                </span>
            </div>

            <% if (project.fundingGoal) { %>
                <div class="text-right">
                    <div class="text-sm font-medium text-gray-900">
                        Kshs<%= (project.fundingRaised || 0).toLocaleString() %> 
                        <span class="text-gray-500">/ Kshs<%= project.fundingGoal.toLocaleString() %></span>
                    </div>
                    <% const progressWidth = Math.min((project.fundingRaised / project.fundingGoal * 100), 100).toFixed(1); %>
                    <div class="w-24 h-1 bg-gray-200 rounded-full mt-1">
                        <div class="h-full bg-primary rounded-full" 
                             style="width: <%= progressWidth %>%">
                        </div>
                    </div>
                </div>
            <% } %>
        </div>

        <% if (project.skills && project.skills.length > 0) { %>
            <div class="mt-4 flex flex-wrap gap-2">
                <% project.skills.slice(0, 3).forEach(skill => { %>
                    <span class="px-2 py-1 text-xs bg-gray-100 text-gray-600 rounded-full">
                        <%= skill %>
                    </span>
                <% }); %>
                <% if (project.skills.length > 3) { %>
                    <span class="px-2 py-1 text-xs bg-gray-100 text-gray-600 rounded-full">
                        +<%= project.skills.length - 3 %> more
                    </span>
                <% } %>
            </div>
        <% } %>
    </div>

    <a href="/projects/<%= project.id %>" class="block p-4 text-center text-sm font-medium text-primary hover:text-primary-dark border-t">
        View Details
    </a>
</div> 2